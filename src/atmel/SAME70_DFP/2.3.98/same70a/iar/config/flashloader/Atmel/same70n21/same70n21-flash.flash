<?xml version="1.0" encoding="iso-8859-1"?>

<flash_device>
  <exe>$TOOLKIT_DIR$\config\flashloader\Atmel\same70n21\same70n21-flash.out</exe>
  <flash_base>0x00400000</flash_base>
  <page>4096</page>
  <block>128 0x2000</block>
